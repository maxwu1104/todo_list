<form action='/todos/{{todo._id}}?_method=put' method='POST' >
  <input type='checkbox' name="isDone" id="isDone" {{#if todo.isDone}} checked {{/if}}/>
  <input
    type='text'
    name='name'
    id='name'
    placeholder='name'
    value='{{todo.name}}'
  />
  <button type='submit'>Save</button>
  <a href='/'>back</a>
</form>